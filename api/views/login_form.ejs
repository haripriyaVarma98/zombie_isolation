  <!DOCTYPE html>
  <html>
  <head>
	<script src="https://code.jquery.com/jquery-3.5.1.js"></script>	
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.js"></script>
	 <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
 	<style>
		/* Below line is used for online Google font */
	@import url(http://fonts.googleapis.com/css?family=Raleway);
	h2{
	background-color: rgb(243, 246, 253);
	padding: 30px 35px;
	margin: 1px 1px;
	text-align:center;
	border-radius: 10px 10px 0 0;
	}
	hr{
	margin: 10px -50px;
	border: 0;
	border-top: 1px solid rgb(204, 204, 204);
	margin-bottom: 40px;
	}
	div.container{
	width: 850px;
	height: 600px;
	margin:20px auto;
	font-family: 'Comic Sans MS', sans-serif;
	}
	div.main{
	width: 800px;
	height: 400px;
	padding: 10px 50px 25px;
	border: 1px solid rgb(128, 128, 128);
	border-radius: 10px;
	font-family: raleway;
	float:center;
	margin-top:50px;
	}
	input[type=text],input[type=password]{
	width: 98%;
	height: 40px;
	padding: 5px;
	margin-bottom: 5px;
	margin-top: 15px;
	border: 2px solid rgb(204, 204, 204);
	color: #4f4f4f;
	font-size: 16px;
	border-radius: 5px;
	}
	label{
	color: #464646;
	margin-top: 15px;
	text-shadow: 0 1px 0 rgb(222, 231, 245);
	font-size: 15px;
	font-weight: bold;
	}
	center{
	font-size:32px;
	}
	div.valid{
	border: 1px;
	font-size:10px;
	color: red;
	margin-bottom: 15px;
	}
	
	input[type=button]{
	font-size: 16px;
	background: linear-gradient(#0d3f6d 5%, #3779b8 100%);
	border: 1px solid #0d275e;
	color: rgb(239, 240, 243);
	font-weight: bold;
	cursor: pointer;
	width: 50%;
	border-radius: 5px;
	margin-top: 15px;
	margin-left: 175px;
	padding: 10px 0;
	outline:none;
	}
	input[type=button]:hover{
	background: linear-gradient(#3779b8 5%, #0d3f6d 100%);
	}
	</style>
	<title>login verification </title>
	</head>

	<body>
	<div class="container">
	<div class="main">
	<h2> User Node Login</h2>
	<form id="form1" method="post" name="form1">
	<label><b>IP address :</b></label>
	<input type="text" name="ip" id="ip"/>
	<div class="valid" id="ip_err" ></div>
	<label><b>Password :</b></label>
	<input type="password" name="password" id="password"/>
	<div class="valid" id="pswd_err" ></div>
	<input class="button" id="button1" type="button" value="Login" >
	</form>
	</div>
	</div>
	 
	<script>
		$(document).ready(function() {
			$('#button1').click(function(){
				var ipadr = $('#ip').val();
				var pwd = $('#password').val();
				if (ipadr == "" && pwd == "") {
					$('#ip_err').html('*The field is required');
					$('#ip_err').css('color','red');
					$('#pswd_err').html('*The field is required');
					$('#pswd_err').css('color','red');
				}
				else{	
					alert("IP address :"+ ipadr);
				}
			});
		});
		
		</script>
	</body>
  </html>
  