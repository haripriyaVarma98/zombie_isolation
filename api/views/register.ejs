  label{
  color: #464646;
  text-shadow: 0 1px 0 rgb(255, 255, 255);
  font-size: 14px;
  font-weight: bold;
  }
  center{
  font-size:32px;
  }
  input[type=button]{
  font-size: 16px;
  background: linear-gradient(#0d3f6d 5%, #3779b8 100%);
  border: 1px solid #0d275e;
  color: rgb(239, 240, 243);
  font-weight: bold;
  cursor: pointer;
  width: 50%;
  border-radius: 5px;
  margin-bottom: 15px;
  margin-top: 25px;
  padding: 10px 0;
  margin-left: 175px;
  outline:none;
