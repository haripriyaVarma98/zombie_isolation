  </head>
  <script src="https://code.jquery.com/jquery-3.5.1.js"></script>	
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.js"></script>

  <body>
      <div id="messageBox"></div>
  <div class="container">
  <div class="main">
  <h2> Node Registration</h2>
  <form id="form_id" method="post" name="myform">
  <label>Enter IP address :</label>
  <input type="text" name="ip" id="ip"/>
  <div class="valid" id="ip_err" ></div>
  <label>Enter Password :</label>
  <input type="password" name="password" id="password"/>
  <div class="valid" id="pwd_err" ></div>
  <label>Confirm Password :</label>
  <div class="valid" id="conf_err" ></div>
  <input type="password" name="password" id="confirm"/>
  <input type="button" value="Submit" id="submit" />
  
  </form>
  </div>
  </div>
  
  <script>
      		$(document).ready(function() {
                $(document).ready(function() {
                    $('#submit').click(function(){
				var ipadr = $('#ip').val();
                var pwd = $('#password').val();
                var conf = $('#confirm').val();
				if (ipadr == "" ) {
					$('#ip_err').html('*The field is required');
					$('#ip_err').css('color','red');
					
                }
                else if (pwd == "") {
                    $('#pwd_err').html('*The field is required');
					$('#pwd_err').css('color','red');
                } 
                else if(conf == ""){
                    $('#conf_err').html('*The field is required');
					$('#conf_err').css('color','red');
                }
                else if(pwd!=conf){
                    alert("Password does not match!");
                }
				else{	
					alert("IP address :"+ ipadr);
				}
			});
		 });
              });
  </script>
</body>
